# Sheldon plugins configuration
# Managed by Ansible - DO NOT EDIT MANUALLY
# This file is generated from the terminal_setup role

# Shell to use for sheldon
# Use zsh if available, otherwise fall back to bash
{% if shell_type_resolved == 'zsh' %}
zsh = true
{% else %}
bash = true
{% endif %}

# Plugins section
[plugins]
{% for plugin in terminal_setup_sheldon_plugins %}
  # {{ plugin.name }}
  {% if plugin.when is defined and plugin.when %}
  {% if plugin.when | bool %}
  {{ plugin.name }} = { {% if plugin.github is defined %}github = "{{ plugin.github }}"{% endif %}{% if plugin.apply is defined %}, apply = {{ plugin.apply | to_json }}{% endif %} }
  {% endif %}
  {% else %}
  {{ plugin.name }} = { {% if plugin.github is defined %}github = "{{ plugin.github }}"{% endif %}{% if plugin.apply is defined %}, apply = {{ plugin.apply | to_json }}{% endif %} }
  {% endif %}
{% endfor %}

