{# Ansible managed: {{ ansible_managed }} #}
# Starship configuration (starship.toml)
# See https://starship.rs/config/ for full docs

# Add a newline before the prompt
add_newline = true

# Minimal, modern format for Bash
format = "$username@$hostname $directory$git_branch$git_status$python$nodejs$rust$cmd_duration\n$character"

[username]
show_always = true
format = "[$user]($style)"
# PLACEHOLDER: Username/lifecycle coloring handled by env vars below

[hostname]
disabled = false
ssh_only = false
format = "[@$hostname]($style) "
# PLACEHOLDER: Lifecycle coloring handled by env vars below

# Placeholder for lifecycle and auth context coloring
# Set env vars (e.g., SESSION_TYPE, LIFECYCLE, AUTH_CONTEXT) in .bashrc
# Use Starship's env_var module for dynamic color logic
# Example:
# [env_var.LIFECYCLE]
# variable = "LIFECYCLE"
# format = "[$env_value]($style) "
# style = "bold green" # dev, bold yellow for test, bold red for prod, etc.
# [env_var.AUTH_CONTEXT]
# variable = "AUTH_CONTEXT"
# format = "[$env_value]($style) "
# style = "fg:cyan" # Override for usernames

[directory]
truncation_length = 3
format = "[$path]($style) "

[git_branch]
disabled = false
format = "[$branch]($style) "

[git_status]
disabled = false

[python]
symbol = "üêç "
pyenv_version_name = true
# Only show in project folders (default Starship behavior)
format = "[$symbol$version]($style) [$virtualenv]($style) "

[nodejs]
symbol = "‚¨¢ "
format = "[$symbol$version]($style) "

[rust]
symbol = "ü¶Ä "
format = "[$symbol$version]($style) "

[cmd_duration]
min_time = 500  # Only show if command took more than 500ms
format = "took [$duration]($style)\n"
style = "yellow"

[character]
success_symbol = "[‚ûú](bold green)"
error_symbol = "[‚úó](bold red)"
