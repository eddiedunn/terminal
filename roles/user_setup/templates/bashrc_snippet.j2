{# Ansible managed: {{ ansible_managed }} #}
# Source personal aliases if they exist
if [ -f "$HOME/.bash_aliases" ]; then . "$HOME/.bash_aliases"; fi

# Source shell completions
if [ -d "$HOME/.bash_completion.d" ]; then
  for f in "$HOME"/.bash_completion.d/*; do
    [ -f "$f" ] && . "$f"
  done
  unset f
fi

# Source all tool initializations from other roles
if [ -d "$HOME/.config/shell_init.d" ]; then
  for init_script in "$HOME"/.config/shell_init.d/*.bash; do
    if [ -f "$init_script" ]; then
      . "$init_script"
    fi
  done
  unset init_script
fi